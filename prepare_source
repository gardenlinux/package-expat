apt-get install --no-install-recommends -y curl ca-certificates

pkg=expat
version_orig=2.6.4
version="$version_orig-1"
curl https://snapshot.debian.org/archive/debian-debug/20241108T203439Z/pool/main/e/expat/expat_2.6.4.orig.tar.gz | gzip -d | tee "$dir/orig.tar" | tar --extract --strip-components 1 --directory "$dir/src"
curl https://snapshot.debian.org/archive/debian-debug/20241108T203439Z/pool/main/e/expat/expat_2.6.4-1.debian.tar.xz | xz -d | tee "$dir/debian.tar" | tar --extract --strip-components 1 --directory "$dir/src"
apply_patches
